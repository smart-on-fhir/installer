upstream messaging {
    server 127.0.0.1:{{messaging_server_internal_port}};
}

# the nginx server instance
server {
    server_name {{messaging_server_external_host}};

    listen {{messaging_server_external_port}};

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      access_log /var/log/nginx/messaging_access.log;
      proxy_pass http://messaging;
      proxy_redirect off;
    }

{% if use_secure_http %}
    ssl on;
    ssl_certificate /etc/nginx/ssl/{{certificate_crt_filename}};
    ssl_certificate_key /etc/nginx/ssl/{{certificate_key_filename}};
{% endif %}
}

{% if messaging_server_external_port != 80 and use_secure_http %}
server {
    server_name {{messaging_server_external_host}};
    listen 80;
    listen [::]:80;
    return 301 https://$server_name$request_uri;
}
{% endif %}
