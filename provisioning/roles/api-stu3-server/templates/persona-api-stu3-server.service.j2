[Unit]
Description=API-stu3-Service

[Service]
User={{username}}
TimeoutStartSec=infinity
WorkingDirectory={{install_dir}}/hspc/api-stu3/{{api_stu3_repo_api_webapp_project}}/target
{% if use_secure_http and not use_custom_ssl_certificates %}
ExecStart={{java_home}}/bin/java \
 -Xms{{api_stu3_server_initial_memory}} \
 -Xmx{{api_stu3_server_max_memory}} \
 -Djetty.port="{{persona_api_stu3_server_internal_port}}" \
 -Djetty.host="{{persona_api_stu3_server_internal_host}}" \
 -Dhspc.platform.authorization.urlContext={{persona_auth_server_url}} \
 -Dhspc.platform.api.security.mode={{api_stu3_server_security_mode}} \
 -Dhspc.platform.api.fhir.openContextPath={{api_stu3_server_open_access_endpoint}} \
 -Dhspc.platform.api.sandbox.name={{api_stu3_server_smart_sandbox}} \
 -Dhspc.platform.api.sandbox.useHspcStarterData=false \
 -Dhspc.platform.api.fhir.db.url=jdbc:mysql://{{mysql_endpoint}}/{{api_stu3_database}} \
 -Dhspc.platform.api.fhir.db.schema={{api_stu3_database}} \
 -Dhspc.platform.api.fhir.defaultTenantId={{api_stu3_server_smart_sandbox}} \
 -Dhspc.platform.api.fhir.db.username={{mysql_user}} \
 -Dhspc.platform.api.fhir.db.password={{mysql_pass}} \
 -Dspring.jpa.hibernate.ddl-auto=none \
 -Dhspc.platform.messaging.subscriptionSupport.enabled=false \
 -Dhibernate.search.default.indexBase={{install_dir}}/hspc/api-stu3/{{api_stu3_repo_api_webapp_project}}/persona-index \
 -Djavax.net.ssl.trustStore="{{install_dir}}/keystore" \
 -Djavax.net.ssl.trustStorePassword="{{keystore_password}}" \
 -jar {{install_dir}}/jetty-runner.jar \
 --config {{install_dir}}/jetty.xml \
 --path {{persona_api_stu3_server_context}} \
 hspc-reference-api.war
{% else %}
ExecStart={{java_home}}/bin/java \
 -Xms{{api_stu3_server_initial_memory}} \
 -Xmx{{api_stu3_server_max_memory}} \
 -Djetty.port="{{persona_api_stu3_server_internal_port}}" \
 -Djetty.host="{{persona_api_stu3_server_internal_host}}" \
 -Dhspc.platform.authorization.urlContext={{persona_auth_server_url}} \
 -Dhspc.platform.api.security.mode={{api_stu3_server_security_mode}} \
 -Dhspc.platform.api.fhir.openContextPath={{api_stu3_server_open_access_endpoint}} \
 -Dhspc.platform.api.sandbox.name={{api_stu3_server_smart_sandbox}} \
 -Dhspc.platform.api.sandbox.useHspcStarterData=false \
 -Dhspc.platform.api.fhir.db.url=jdbc:mysql://{{mysql_endpoint}}/{{api_stu3_database}} \
 -Dhspc.platform.api.fhir.db.schema={{api_stu3_database}} \
 -Dhspc.platform.api.fhir.defaultTenantId={{api_stu3_server_smart_sandbox}} \
 -Dhspc.platform.api.fhir.db.username={{mysql_user}} \
 -Dhspc.platform.api.fhir.db.password={{mysql_pass}} \
 -Dspring.jpa.hibernate.ddl-auto=none \
 -Dhspc.platform.messaging.subscriptionSupport.enabled=false \
 -Dhibernate.search.default.indexBase={{install_dir}}/hspc/api-stu3/{{api_stu3_repo_api_webapp_project}}/persona-index \
 -jar {{install_dir}}/jetty-runner.jar \
 --config {{install_dir}}/jetty.xml \
 --path {{persona_api_stu3_server_context}} \
 hspc-reference-api.war
{% endif %}
Restart=always

[Install]
WantedBy=multi-user.target
